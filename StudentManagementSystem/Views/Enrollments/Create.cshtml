@model StudentManagementSystem.Models.Enrollment

@{
    ViewData["Title"] = "Create Enrollment";
}

<div class="container">
    <h1 class="display-4">Create Enrollment</h1>
    <hr />
    
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="StudentId" class="control-label">Student</label>
                    <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId">
                        <option value="">-- Select Student --</option>
                    </select>
                    <span asp-validation-for="StudentId" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="CourseId" class="control-label">Course</label>
                    <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId">
                        <option value="">-- Select Course --</option>
                    </select>
                    <span asp-validation-for="CourseId" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Grade" class="control-label"></label>
                    <select asp-for="Grade" class="form-control">
                        <option value="">-- No Grade --</option>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                        <option value="F">F</option>
                    </select>
                    <span asp-validation-for="Grade" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="EnrollmentDate" class="control-label"></label>
                    <input asp-for="EnrollmentDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Enrollment Information</h5>
                </div>
                <div class="card-body">
                    <p>Please select a student and a course to create an enrollment.</p>
                    <p>The grade can be assigned now or later.</p>
                    <p>The enrollment date defaults to today but can be changed if needed.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
