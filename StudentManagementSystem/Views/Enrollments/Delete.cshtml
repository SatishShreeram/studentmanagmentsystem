@model StudentManagementSystem.Models.Enrollment

@{
    ViewData["Title"] = "Delete Enrollment";
}

<div class="container">
    <h1 class="display-4">Delete Enrollment</h1>
    
    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewData["ErrorMessage"]
        </div>
    }
    
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Warning!</h4>
        <p>Are you sure you want to delete this enrollment? This action cannot be undone.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Enrollment Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Student</dt>
                <dd class="col-sm-9">@Model.Student.FullName</dd>

                <dt class="col-sm-3">Course</dt>
                <dd class="col-sm-9">@Model.Course.Title (@Model.Course.CourseCode)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Grade)</dt>
                <dd class="col-sm-9">@(Model.Grade.HasValue ? Model.Grade.ToString() : "No grade")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EnrollmentDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EnrollmentDate)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="EnrollmentId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
