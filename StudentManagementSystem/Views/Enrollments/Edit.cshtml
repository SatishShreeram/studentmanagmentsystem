@model StudentManagementSystem.Models.Enrollment

@{
    ViewData["Title"] = "Edit Enrollment";
}

<div class="container">
    <h1 class="display-4">Edit Enrollment</h1>
    <hr />
    
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="EnrollmentId" />
                
                <div class="form-group mb-3">
                    <label asp-for="StudentId" class="control-label">Student</label>
                    <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId" disabled>
                    </select>
                    <input type="hidden" asp-for="StudentId" />
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="CourseId" class="control-label">Course</label>
                    <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId" disabled>
                    </select>
                    <input type="hidden" asp-for="CourseId" />
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Grade" class="control-label"></label>
                    <select asp-for="Grade" class="form-control">
                        <option value="">-- No Grade --</option>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                        <option value="F">F</option>
                    </select>
                    <span asp-validation-for="Grade" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="EnrollmentDate" class="control-label"></label>
                    <input asp-for="EnrollmentDate" class="form-control" type="date" />
                    <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Enrollment Information</h5>
                </div>
                <div class="card-body">
                    <p>You can update the grade and enrollment date.</p>
                    <p>The student and course cannot be changed. If you need to change these, please delete this enrollment and create a new one.</p>
                </div>
                <div class="card-footer">
                    <a asp-action="Details" asp-route-id="@Model.EnrollmentId" class="btn btn-outline-info">View Details</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
