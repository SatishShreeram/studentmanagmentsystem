@model IEnumerable<StudentManagementSystem.Models.Enrollment>

@{
    ViewData["Title"] = "Enrollments";
}

<div class="container">
    <h1 class="display-4">Enrollments</h1>

    <div class="mb-3 d-flex justify-content-between align-items-center">
        <form asp-action="Index" method="get" class="d-flex">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Search by student or course" value="@ViewData["CurrentFilter"]" />
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </div>
        </form>
        <a asp-action="Create" class="btn btn-info">Create New</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>
                        Student
                    </th>
                    <th>
                        Course
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParam"]" class="text-white text-decoration-none">
                            @Html.DisplayNameFor(model => model.EnrollmentDate)
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["GradeSortParam"]" class="text-white text-decoration-none">
                            @Html.DisplayNameFor(model => model.Grade)
                        </a>
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Students" asp-action="Details" asp-route-id="@item.StudentId">
                                @item.Student.FullName
                            </a>
                        </td>
                        <td>
                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.CourseId">
                                @item.Course.Title (@item.Course.CourseCode)
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnrollmentDate)
                        </td>
                        <td>
                            @(item.Grade.HasValue ? item.Grade.ToString() : "No grade")
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.EnrollmentId" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.EnrollmentId" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.EnrollmentId" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
