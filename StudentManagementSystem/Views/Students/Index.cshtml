@model IEnumerable<StudentManagementSystem.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<div class="container">
    <h1 class="display-4">Students</h1>

    <div class="mb-3 d-flex justify-content-between align-items-center">
        <form asp-action="Index" method="get" class="d-flex">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Search by name or email" value="@ViewData["CurrentFilter"]" />
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </div>
        </form>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]" class="text-white text-decoration-none">
                            @Html.DisplayNameFor(model => model.FullName)
                            @if (ViewData["NameSortParam"].ToString() == "")
                            {
                                <i class="bi bi-arrow-up"></i>
                            }
                            else
                            {
                                <i class="bi bi-arrow-down"></i>
                            }
                        </a>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParam"]" class="text-white text-decoration-none">
                            @Html.DisplayNameFor(model => model.EnrollmentDate)
                            @if (ViewData["DateSortParam"].ToString() == "Date")
                            {
                                <i class="bi bi-arrow-up"></i>
                            }
                            else if (ViewData["DateSortParam"].ToString() == "date_desc")
                            {
                                <i class="bi bi-arrow-down"></i>
                            }
                        </a>
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnrollmentDate)
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.StudentId" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
